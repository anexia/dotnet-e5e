<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
		<Authors>Anexia</Authors>
		<Description>A helper library to help you build functions on top of the Anexia Engine.</Description>
		<License>MIT</License>
		<RepositoryUrl>https://github.com/anexia/dotnet-e5e</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>anexia,faas</PackageTags>
		<PackRelease>true</PackRelease>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<EnablePackageValidation>true</EnablePackageValidation>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<AnalysisMode>Recommended</AnalysisMode>
		<EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
		<AnalysisLevelDocumentation>latest</AnalysisLevelDocumentation>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.1" />
	</ItemGroup>

</Project>
